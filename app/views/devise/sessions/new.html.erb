<section style="background-color: #eee; margin-left: -20px; margin-right: -20px; margin-bottom: -20px;">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center h-100 pt-5">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px; width: 100%">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4"><%= t('log_in.title') %></p>
                
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'mx-1 mx-md-4') do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: t('log_in.email') %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: t('log_in.password') %>
                    </div>
                  </div>

                  <% if devise_mapping.rememberable? %>
                    <div class="d-flex flex-row justify-content-center align-items-center mb-4 mx-auto">
                        <%= f.check_box :remember_me, class: 'me-2' %>
                        <%= f.label t('log_in.remember') %>
                    </div>
                  <% end %>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= f.submit t('log_in.sign_in'), class: 'btn btn-primary btn-lg' %>
                  </div>

                <% end %>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://rubyover.blob.core.windows.net/maincontainer/reg_logo.png" class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>