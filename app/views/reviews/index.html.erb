<p id="notice"><%= notice %></p>

<h1><%= t('reviews.title') %></h1>

<div class="card-columns">
  <% @reviews.each do |review| %>
      <div class="card mb-5" style="width: 18rem;">
        <div class="row g-0 card-header">
          <div class="col text-start"><%= review.group %></div>
          <div class="col text-end"><%= review.author_rating %> | <%= review.average_users_rating %></div>
        </div>
        <%# <img src="..." class="card-img-top" alt="Review image"> %>
        <div class="card-body">
          <h5 class="card-title text-center"><%= review.name %></h5>
          <hr>
          <p class="card-text"><%= description_formatted review %> ...</p>
          
        </div>
        <div class="card-footer">
          <%= link_to 'Show', review, class: 'btn btn-primary btn-sm'%>
          <% if review.user == current_user %>
            <div class="float-end">
              <%= link_to 'Edit', edit_review_path(review), class: 'btn btn-outline-warning btn-sm'%>
              <%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm'%>
            </div>
          <% end %>
          <p class="card-text"><small class="text-muted">Last update at <%= distance_of_time_in_words_to_now(review.updated_at) %></small></p>
          <%= form_with(model: review) do |form| %>
            <div class="rating">
              <% (1..5).sort_by{|n| -n}.each do |rating| %>
                <% if (appreciated?(review)) %>
                  <label class="<%= 'filled' if current_rating(review) >= rating%>">★</label>
                <% else %>
                  <%= link_to '☆', add_user_rating_review_path(review.id, rating), method: :add_user_rating %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
  <% end %>
</div>
<br>
<div class="apple_pagination">
  <div class="page_info">
    <%= page_entries_info @reviews %>
  </div>
  <%= will_paginate @reviews, :container => false %>
</div>
<br><br><hr><br><br>

<%= link_to 'New Review', new_review_path, class: 'btn btn-success'%>
