<div class="card mb-5 mx-auto" style="width: 18rem;">
  <div class="row g-0 card-header">
    <div class="col text-start"><%= link_to 'Back', request.referrer || root_path, class: 'btn btn-outline-secondary btn-sm' %></div>
    <div class="col text-center fw-bold fs-5">User profile</div>
    <div class="col text-end"></div>
  </div>
  <div class="card-body">
    <h5 class="card-title text-center"><%= @user.username %></h5>
    <hr>
    <div class="row g-0">
      <div class="col text-start">User id</div>
      <div class="col text-end"><%= @user.id %></div>
    </div>
    <div class="row g-0">
      <div class="col text-start">Email</div>
      <div class="col text-end"><%= @user.email %></div>
    </div>
  </div>
  <div class="card-footer">
    <% if @user == current_user %>
      <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-outline-warning btn-sm'%>
      <div class="float-end"><%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm'%></div>
    <% end %>
    <p class="card-text"><small class="text-muted">Last update at <%= distance_of_time_in_words_to_now(@user.updated_at) %></small></p>
  </div>
</div>
<h5 class="text-center">User's reiviews</h5>
<hr><br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Description</th>
      <th class="text-center">Author's rating</th>
      <th class="text-center">Users rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td class="align-middle"><%= review.id %></td>
        <td class="align-middle"><%= review.name %></td>
        <td class="align-middle"><%= description_formatted review %> ...</td>
        <td class="align-middle text-center fw-bold"><%= review.author_rating %></td>
        <td class="align-middle text-center fw-bold"><%= review.average_users_rating %></td>
        <td><%= link_to 'Show', review, class: 'btn btn-primary btn-sm'%></td>
        <% if current_user == @user %>
          <td><%= link_to 'Edit', edit_review_path(review), class: 'btn btn-outline-warning btn-sm'%></td>
          <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm'%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="apple_pagination">
  <div class="page_info">
    <%= page_entries_info @reviews %>
  </div>
  <%= will_paginate @reviews, :container => false %>
</div>



